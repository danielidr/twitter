<p id="notice"><%= notice %></p>

<!-- Vista de Tweet-->
<div class="col-12 my-4 media">
  <%= image_tag @tweet.user.profile_picture, class: "mr-3", alt: "Image profile" %>
    <div class="media-body">
      <!-- Condicional de retweets-->
        <%if @tweet.is_rt %>
          <h5 class="mt-0"><%= @tweet.user.name %> ha retwitteado</h5>
            <div class="media mt-3">
              <%= image_tag @tweet.user_tw_origin(@tweet.origin_id).profile_picture, class: "mr-3", alt: "Image profile", width:"32", height:"43" %>
              <div class="media-body">
                <h6 class="mt-0"><%= @tweet.user_tw_origin(@tweet.origin_id).name %></h6>
                <p><%= @tweet.content %></p>
              </div>
            </div>
        <% else %>
          <h5 class="mt-0"><%= @tweet.user.name %></h5>
          <p><%= @tweet.content %></p>
        <% end %>
        <!-- Vista para likes-->
        <%if @tweet.like_count > 0 %>
          <%= @tweet.like_count %>
        <% end %>
        <%if current_user %>
          <%if @tweet.user_like?(current_user.id) %>
            <i><%= link_to '' , like_path({id: @tweet.id_like(current_user.id)}), method: :delete, class: "fas fa-heart" %></i>
          <% else %>
            <i><%= link_to '' , likes_path(like: {tweet_id: @tweet.id}, remote: true), method: :post, class: "far fa-heart" %></i>
          <% end %>
        <% else %>
          <i class= "far fa-heart"></i>
        <%end%>

        <!-- Vista para retweets-->
        <%if not @tweet.is_rt %>
          <% rt_count = @tweet.retweet_count(@tweet.id) %>
            <%if rt_count > 0 %>
              <%= rt_count %>
            <% end %>
        <% end %>
        <%if current_user %>
          <i><%= link_to '' , tweets_path(tweet: {origin_id: @tweet.id, is_rt: true, content: @tweet.content }, remote: true), method: :post, class: "fas fa-retweet" %><i>
        <% else %>
          <i class= "fas fa-retweet"></i>
        <% end %>

        <!-- Vista para fecha-->
          <p>Hace <%=@tweet.time_tweet(@tweet.created_at)%></p>
        </div>
    </div>
    <!-- Fotos de likes -->
    <p>Personas a las que les ha gustado esto:</p>

    <% @tweet.likes.each do |like| %>
      <%= image_tag like.user.profile_picture, class: "mr-3", alt: "Image profile", width:"64", height:"86" %>
    <% end %>
</div>





